<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- remote servers to query -->
  <remote name="yocto" fetch="https://git.yoctoproject.org/git/" />
  <remote name="github" fetch="https://github.com/" />

  <!-- defaults -->
  <default remote="yocto" sync-j="4" revision="master"/>

  <!-- Yocto/OpenEmbedded things. --> 
  <project name="poky" path="poky" remote="yocto" revision="thud" />
  <project name="openembedded/meta-openembedded" path="poky/meta-openembedded" remote="github" revision="thud" />

  <!-- RaspberryPi layer -->
  <project name="meta-raspberrypi" path="poky/meta-raspberrypi" remote="yocto" revision="thud"/>

  <!-- PresenceOS layer -->
  <project name="SCVready/meta-presence" path="poky/meta-presence" remote="github" revision="master"/>

</manifest>
